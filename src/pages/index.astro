---
// Components
import Layout from '../layouts/Layout.astro';
import GrowTogether from '../sections/GrowTogether.astro';
import CirclesBG from '../sections/CirclesBG.astro';

import Footer from '../sections/Footer.astro';

// Styles
import 'aos/dist/aos.css';
---

<Layout title='Grow Together Conference 2025'>
	<CirclesBG
		circles={[
			{
				color: 'dark',
				position: 'top-left--extreme',
				size: 'small',
			},
			{
				color: 'yellow',
				position: 'top-right',
				size: 'large',
			},
			{
				color: 'green',
				position: 'center-left',
				size: 'medium',
			},
		]}
	>
		<GrowTogether />
	</CirclesBG>
	<Footer />
</Layout>
