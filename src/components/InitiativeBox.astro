---
export interface Props {
	label: string;
	name: string;
}

const { label, name } = Astro.props;
---

<div class='initiative-box border border-4 border-dark h-100'>
	<div class='initiative-box-header bg-dark text-center py-3'>
		<h3 class='text-white text-uppercase'>
			{label}
		</h3>
	</div>
	<div class='initiative-box-body py-3 px-4'>
		<h4 class='text-black text-uppercase'>
			{name}
		</h4>
		<div class='text-black'>
			<slot />
		</div>
	</div>
</div>
