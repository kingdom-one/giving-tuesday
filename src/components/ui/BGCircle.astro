---
import { Image } from 'astro:assets';

import yellow from '../../assets/png/circles/bg-circle--yellow.png';
import dark from '../../assets/png/circles/bg-circle--dark.png';
import green from '../../assets/png/circles/bg-circle--green.png';
import white from '../../assets/png/circles/bg-circle--white.png';

export interface Props {
	color: 'yellow' | 'dark' | 'green' | 'white';
	class?: string | string[];
}

const { color, class: className } = Astro.props;

const srcMap = {
	yellow,
	dark,
	green,
	white,
};
---

<Image
	src={srcMap[color]}
	alt=''
	loading='eager'
	class:list={['w-100', 'h-100', 'object-fit-contain', className]}
	aria-hidden='true'
	data-aos='zoom-in'
/>

<script>
	import AOS from 'aos';
	AOS.init({
		once: true,
	});
</script>
